<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= viewList.title %> - OLX</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/view.css">
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="header-content">
            <a href="/" class="logo"><i class="fas fa-store"></i>OLX</a>
        </div>
    </header>

    <div class="container">
        <!-- Breadcrumb -->
        <div class="breadcrumb">
            <a href="/lists">Home</a>
            <i class="fas fa-chevron-right"></i>
            <a href="/lists">Categories</a>
            <i class="fas fa-chevron-right"></i>
            <a href="/lists"><%= viewList.category %></a>
            <i class="fas fa-chevron-right"></i>
            <span><%= viewList.title %></span>
        </div>
        
        <div class="content-wrapper">
            <!-- Image Gallery -->
            <div class="image-gallery">
                <img id="mainImage" src="<%= viewList.images[0] %>" alt="Main image" class="main-image">
                <div class="thumbnail-container">
                    <% for(viewImage of viewList.images) { %>
                    <img src="<%= viewImage %>" alt="Thumbnail" class="thumbnail" onclick="changeImage(this)">
                    <% } %>
                </div>
            </div>
            
            <!-- Details Section -->
            <div class="details-section">
                <div class="price-card">
                    <div class="price">RS <%= viewList.price %></div>
                    <h1 class="title"><%= viewList.title %></h1>
                    
                    <div class="action-buttons">
                        <button class="btn btn-chat"><i class="fas fa-comment"></i> Chat</button>
                        <a href="tel:<%= viewList.seller.phone %>" class="btn btn-call"><i class="fas fa-phone"></i> Call</a>
                    </div>
                </div>
                
                <div class="info-card">
                    <h2 class="card-title"><i class="fas fa-info-circle"></i> Details</h2>
                    <div class="info-grid">
                        <div class="info-item">
                            <span class="info-label">Category</span>
                            <span class="info-value"><%= viewList.category %></span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Condition</span>
                            <span class="info-value"><%= viewList.condition %></span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Posted On</span>
                            <span class="info-value"><%= viewList.postedAt.toString().split(" ").slice(0,3).join(" ") %></span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Location</span>
                            <span class="info-value"><%= viewList.location.city %></span>
                        </div>
                    </div>
                </div>
                
                <div class="description">
                    <h2 class="card-title"><i class="fas fa-align-left"></i> Description</h2>
                    <p class="description-text"><%= viewList.description %></p>
                </div>
                
                <div class="seller-info">
                    <h2 class="card-title"><i class="fas fa-user"></i> Seller Information</h2>
                    <div class="seller-header">
                        <div class="seller-avatar"><%= viewList.seller.name.charAt(0).toUpperCase() %></div>
                        <div>
                            <div class="seller-name"><%= viewList.seller.name %></div>
                            <div class="seller-member">OLX Member</div>
                        </div>
                    </div>
                    
                    <div class="seller-contact">
                        <div class="contact-item">
                            <i class="fas fa-phone"></i>
                            <a href="tel:<%= viewList.seller.phone %>"><%= viewList.seller.phone %></a>
                        </div>
                        <div class="contact-item">
                            <i class="fas fa-envelope"></i>
                            <a href="mailto:<%= viewList.seller.email %>"><%= viewList.seller.email %></a>
                        </div>
                        <div class="contact-item">
                            <i class="fas fa-map-marker-alt"></i>
                            <span><%= viewList.location.address %>, <%= viewList.location.city %></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="footer">
            <p>Â© 2023 OLX - All rights reserved</p>
        </div>
    </div>

    <script>
        // Set first thumbnail as active
        document.addEventListener('DOMContentLoaded', function() {
            if (document.querySelector('.thumbnail')) {
                document.querySelector('.thumbnail').classList.add('active');
            }
        });
        
        // Change main image when thumbnail is clicked
        function changeImage(element) {
            document.getElementById('mainImage').src = element.src;
            
            // Update active thumbnail
            document.querySelectorAll('.thumbnail').forEach(function(thumb) {
                thumb.classList.remove('active');
            });
            
            element.classList.add('active');
        }
    </script>
</body>
</html>